
*
  box-sizing border-box
p
  margin 0
a
  text-decoration none
  color inherit

style 
  display none
script
  display none

html,body
  height 100%
  width 100%
  margin 0
  position relative
  font-size 1.35rem
body

  background-color #000
  color #ffffff
  .list
    min-width: 70%;
    text-align: center;
    margin: 0 auto;
    .list-item
      min-width 40%
      margin 20px 0
      padding-bottom 10px
      border-bottom 1px solid #dedede
      .md-headline
        font-size 1.6rem
        margin-bottom 15px
        margin-top 70px
      .title
        text-transform capitalize